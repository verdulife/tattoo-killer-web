---
import Navbar from "@/components/Navbar.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body>
    <div class="flex flex-col overflow-x-hidden bg-[url('/pattern.png')] text-slate-800">
      <Navbar />
      <slot />
    </div>
  </body>
</html>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import SplitType from "split-type";

  gsap.registerPlugin(ScrollTrigger);
  const splitTypes = document.querySelectorAll(".erease") as any;

  splitTypes.forEach((splitType: any) => {
    const text = new SplitType(splitType, { types: "words,chars" });

    gsap.to(text.chars, {
      scrollTrigger: {
        trigger: splitType,
        start: "top 45%",
        end: "top 15%",
        scrub: 0,
        markers: false,
      },
      color: "transparent",
      stagger: 1,
    });

    gsap.to(text.chars, {
      scrollTrigger: {
        trigger: splitType,
        start: "top 12%",
        end: "top 7%",
        scrub: 1,
        markers: false,
      },
      transform: "translateY(-50%)",
      opacity: 0.1,
      stagger: 1,
    });

    gsap.to(text.chars, {
      scrollTrigger: {
        trigger: splitType,
        start: "top 10%",
        end: "top 5%",
        scrub: 1,
        markers: false,
      },
      opacity: 0,
      stagger: 1,
    });
  });
</script>

<style is:global>
  :root {
    text-wrap: pretty;
    scroll-behavior: smooth;
  }

  @font-face {
    font-family: "Sporting Grotesk";
    font-weight: normal;
    font-display: swap;
    src: url("/fonts/sporting-grotesk-regular.woff2") format("woff2");
  }

  @font-face {
    font-family: "Sporting Grotesk";
    font-weight: bold;
    font-display: swap;
    src: url("/fonts/sporting-grotesk-bold.woff2") format("woff2");
  }
</style>
