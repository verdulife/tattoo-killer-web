---
interface Props {
  image: string;
  title: string;
  price: string;
  class?: string;
}

const { image, title, price } = Astro.props;
---

<div
  class:list={[
    "flex flex-col items-center justify-between rounded-xl border-2 border-neutral-200 bg-neutral-50/10 bg-white px-4 py-8 shadow-md lg:p-8 lg:shadow-xl",
    Astro.props.class,
  ]}
>
  <img
    src={image}
    alt={title}
    class="aspect-square w-full max-w-sm rounded-xl object-cover shadow-lg"
  />

  <div class="flex flex-col items-center">
    <h2 class="mt-8 font-title text-xl font-bold">{title}</h2>

    <p class="my-4 border-y border-neutral-400 p-4 font-title text-xs">
      A PARTIR DE <strong>{price}</strong>
    </p>

    <slot />
  </div>
</div>
