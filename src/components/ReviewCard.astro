---
import Star from "@/assets/icons/Star.astro";

interface Props {
  avatar: string;
  name: string;
  review: string;
}

const { avatar, name, review } = Astro.props;
---

<li
  class="relative flex flex-col gap-2 mb-10 md:mb-0 p-6 lg:p-8 w-64 lg:w-80 aspect-square overflow-hidden rounded-xl backdrop-blur bg-slate-50/10 border-2 border-slate-200 shadow-md lg:shadow-xl"
>
  <picture>
    <img
      src={avatar}
      alt={name}
      width="48"
      height="48"
      loading="lazy"
      decoding="async"
      class="w-12"
    />
  </picture>

  <header class="flex flex-col">
    <h3 class="font-semibold text-slate-800 text-xl">
      {name}
    </h3>

    <div class="flex items-center gap-1 text-yellow-500">
      <Star />
      <Star />
      <Star />
      <Star />
      <Star />
    </div>
  </header>

  <p class="text-slate-600 line-clamp-4 lg:line-clamp-6">
    {review}
  </p>
</li>
