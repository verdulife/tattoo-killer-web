---
import Pretitle from "@/components/Pretitle.astro";
import Layout from "@/layouts/Layout.astro";
import faqs from "@/lib/Faqs.json";
import Contact from "@/sections/Contact.astro";
---

<Layout title="Preguntas frequentes | TattooKiller">
  <section class="flex min-h-screen flex-col items-center py-40 lg:py-44">
    <div class="container flex flex-col items-center p-4 md:p-8">
      <Pretitle>PREGUNTAS FREQUENTES</Pretitle>
      <h2
        class="mb-12 mt-6 max-w-4xl text-center font-title text-3xl font-bold leading-none sm:text-5xl"
      >
        Nuestros clientes nos suelen preguntar
      </h2>
      <div class="grid gap-10 sm:p-3 md:grid-cols-2 md:gap-8 lg:px-12 xl:px-32">
        {
          faqs.map(({ question, answer }) => (
            <div>
              <h3 class="font-semibold">{question}</h3>
              <p class="mt-1 dark:text-gray-600">{answer}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <Contact />
</Layout>
